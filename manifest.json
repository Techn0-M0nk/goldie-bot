{
  "manifest_version": 3,
  "name": "Daily Gold Prices India",
  "version": "1.0",
  "description": "Shows daily gold prices in India.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://api.metalpriceapi.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}